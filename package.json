{
  "name": "@igorjs/gh-actions-clean-workflow",
  "version": "7.0.0",
  "description": "Github Action to delete old workflow runs",
  "engines": {
    "node": ">=24.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format src",
    "format:fix": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "build": "ncc build src/index.ts -o dist --minify --no-source-map-register --target es2022 --license licenses.txt",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "all": "npm run check && npm run test && npm run build"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "author": "Igor J. S. <oss@mail.igorjs.io> (https://igorjs.io/)",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@octokit/types": "^16.0.0",
    "@types/node": "^24.10.1",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^4.0.6",
    "globals": "^16.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
